<div class="question">
  <div class="question-content">
    <div class="question-text text-lead">
      <%= questions.text %>
    </div>

    <% if questions.answer.present? %>
      <div class="question-answer text-lead">
        <%= questions.answer if questions.answer.present? %>
      </div>
    <% end %>

    <div class="question-date">
      <%= questions.created_at.strftime('%d %b %M:%H') %>
    </div>
  </div>
</div>
